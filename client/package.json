{
  "name": "smart-home_dashboard",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://smart-home-backend:5000/",
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-dotenv": "^0.1.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^4.2.4"
  },
  "scripts": {
    "start": "react-dotenv && react-scripts start",
    "build": "react-dotenv && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "react-dotenv": {
    "whitelist": [
      "latitude",
      "longitude",
      "weather_api_key"
    ]
  }
}
